#!/usr/bin/env bash

PROGRAM_FRAGMENT_SRC=$(echo $1 | sed -e 's/#/\//');
PROGRAM_FRAGMENT="$WIKI_INDEX_PATH/ProgramFragment/$PROGRAM_FRAGMENT_SRC"
PROGRAM_FRAGMENT_LANG="$(cat "$WIKI_INDEX_PATH/ProgramFragmentLang/$PROGRAM_FRAGMENT_SRC")"
shift
exec "$PROGRAM_FRAGMENT_LANG" "$PROGRAM_FRAGMENT" "$@"
